{   
    "extends": ["@ornikar/eslint-config/babel", "prettier"],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "node": true
    },
    "overrides": [
        {
            "files": ["src/*.ts"],
            "rules": {
                "import/no-extraneous-dependencies": {
                    "devDependencies": true
                },
                "max-lines": ["error", {
                    "skipComments": true
                }]
            }
        },
        {
            "files": ["rollup.config.js"],
            "rules": {
                "import/no-extraneous-dependencies": {
                    "devDependencies": true
                }
            }
        },
        {
            "files": [
                "src/**/*.test.js"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "import/no-extraneous-dependencies": [
                    "error",
                    {
                        "devDependencies": true
                    }
                ]
            }
        }
    ]
}